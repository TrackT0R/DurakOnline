        <Label Content="Пароль :" HorizontalAlignment="Left" Margin="10,81,0,0" VerticalAlignment="Top"/>
        <Button Name="CreateButton" Content="Создать" HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top" Width="125" Click="CreateButton_Click"/>

    </Grid>
</Window>
