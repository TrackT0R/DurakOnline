        <TextBox Name="RoomNameTextBox" HorizontalAlignment="Left" Height="23" Margin="10,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="125"/>
        <PasswordBox Name="PasswordBox" HorizontalAlignment="Left" Margin="10,107,0,0" VerticalAlignment="Top" Width="125" Password=""/>
